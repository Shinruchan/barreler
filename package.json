{
  "name": "barreler",
  "version": "0.0.6",
  "description": "Generator for barrel files (export from index files) for JavaScript and TypeScript.",
  "bin": {
    "barreler": "./lib/cli/index.js"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/cli/index.ts",
    "cli": "ts-node src/cli/index.ts",
    "build": "tsc -p .",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shinruchan/barreler.git"
  },
  "keywords": [
    "barrel",
    "node.js",
    "index.js",
    "index.ts",
    "typescript"
  ],
  "author": "Shinru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shinruchan/barreler/issues"
  },
  "homepage": "https://github.com/Shinruchan/barreler#readme",
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/meow": "^5.0.0",
    "@types/node": "^12.7.2",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@danielberndt/match-all": "^1.0.0",
    "meow": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "resetMocks": true,
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.spec.json"
      }
    }
  }
}
