{
  "name": "barreler",
  "version": "0.0.8",
  "description": "Generator for barrel files (export from index files) for JavaScript and TypeScript.",
  "bin": {
    "barreler": "./lib/cli/index.js"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/cli/index.ts",
    "cli": "tsx ./src/cli/index.ts",
    "build": "tsc -p .",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shinruchan/barreler.git"
  },
  "keywords": [
    "barrel",
    "node.js",
    "index.js",
    "index.ts",
    "typescript"
  ],
  "author": "Shinru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shinruchan/barreler/issues"
  },
  "homepage": "https://github.com/Shinruchan/barreler#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/meow": "^6.0.0",
    "@types/node": "^22.15.18",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@danielberndt/match-all": "^1.0.0",
    "meow": "9.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default",
    "resetMocks": true,
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.spec.json"
        }
      ]
    }
  }
}
